{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Loki"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "LokiHttp",
        "Args": {
          "serverUrl": "http://159.223.26.252:3100/",
          "credentials": null
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName"],
    "Properties": {
      "Application": "csharp_minitwit"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft.AspNetCore": "Trace"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/Databases/volume/minitwit.db"
  },
  "Constants": {
    "PerPage": 30,
    "Debug": true,
    "SecretKey": "development key"
  }
}
